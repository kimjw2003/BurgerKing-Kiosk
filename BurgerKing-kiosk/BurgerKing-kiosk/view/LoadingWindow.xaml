<Window x:Class="BurgerKing_kiosk.view.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BurgerKing_kiosk.view"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        mc:Ignorable="d"
        Title="LoadingWindow" Height="400" Width="500">
    <Grid>
        <TextBlock Text="Loading" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 0 0 30" FontSize="30" />
        <ProgressBar x:Name="progressBar" VerticalAlignment="Center" HorizontalAlignment="Stretch" Height="30" Margin="20 40 20 0" />
    </Grid>
</Window>
