<Page x:Class="BurgerKing_kiosk.TablePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BurgerKing_kiosk"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="TablePage">

    <Page.Resources>
        <Style x:Key="Table" TargetType="Button">
            <Setter Property="Background" Value="#939393"/>
        </Style>
        <Style x:Key="Number" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="40"/>
            <Setter Property="Margin" Value="5,0"/>
        </Style>
        <Style x:Key="Time" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="55"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style x:Key="GetTime" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="FontSize" Value="40"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Page.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="1.5*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <TextBlock Text="식사 할 좌석을 선택해 주세요" HorizontalAlignment="Center"
                       VerticalAlignment="Center" FontSize="50"
                       FontWeight="Bold"></TextBlock>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Grid.Column="1">
                <Button x:Name="one" Margin="10" Click="Click_Seat"
                        Style="{StaticResource TablenButton}">
                    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="3*"/>
                            <RowDefinition Height="2*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <TextBlock Style="{StaticResource Number}">NO. 1</TextBlock>
                        </Grid>
                        <Grid Grid.Row="1">
                            <TextBlock Style="{StaticResource Time}"></TextBlock>
                        </Grid>
                        <Grid Grid.Row="2">
                            <TextBlock Style="{StaticResource GetTime}"></TextBlock>
                        </Grid>
                    </Grid>
                </Button>
            </Grid>
            <Grid Grid.Row="0" Grid.Column="2">
                <Button x:Name="two" Margin="10" Click="Click_Seat"
                        Style="{StaticResource TablenButton}">
                    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="3*"/>
                            <RowDefinition Height="2*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" VerticalAlignment="Stretch">
                            <TextBlock Style="{StaticResource Number}">NO. 2</TextBlock>
                        </Grid>
                        <Grid Grid.Row="1" VerticalAlignment="Stretch">
                            <TextBlock Style="{StaticResource Time}"></TextBlock>
                        </Grid>
                        <Grid Grid.Row="2">
                            <TextBlock Style="{StaticResource GetTime}"></TextBlock>
                        </Grid>
                    </Grid>
                </Button>
            </Grid>
            <Grid Grid.Row="0" Grid.Column="3">
