                            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center"
                                       FontSize="55" Foreground="White"></TextBlock>
                        </Grid>
                        <Grid Grid.Row="2">
                            <TextBlock HorizontalAlignment="Right"
                                       FontSize="40" Foreground="White"></TextBlock>
                        </Grid>
                    </Grid>
                </Button>
            </Grid>
            <Grid Grid.Row="1" Grid.Column="3">
                <Button x:Name="six" Margin="10" Click="Click_Seat"
                        Style="{StaticResource TablenButton}">
                    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="3*"/>
                            <RowDefinition Height="2*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <TextBlock FontWeight="Bold" Foreground="White"
                                       FontSize="40" Margin="5,0">NO. 6</TextBlock>
                        </Grid>
                        <Grid Grid.Row="1">
                            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center"
                                       FontSize="55" Foreground="White"></TextBlock>
                        </Grid>
                        <Grid Grid.Row="2">
                            <TextBlock HorizontalAlignment="Right"
                                       FontSize="40" Foreground="White"></TextBlock>
                        </Grid>
                    </Grid>
                </Button>
            </Grid>
            <Grid Grid.Row="2" Grid.Column="1">
                <Button x:Name="seven" Margin="10" Click="Click_Seat"
                        Style="{StaticResource TablenButton}">
                    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="3*"/>
                            <RowDefinition Height="2*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <TextBlock FontWeight="Bold" Foreground="White"
                                       FontSize="40" Margin="5,0">NO. 7</TextBlock>
                        </Grid>
                        <Grid Grid.Row="1">
                            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center"
                                       FontSize="55" Foreground="White"></TextBlock>
                        </Grid>
                        <Grid Grid.Row="2">
                            <TextBlock HorizontalAlignment="Right"
                                       FontSize="40" Foreground="White"></TextBlock>
                        </Grid>
                    </Grid>
                </Button>
            </Grid>
            <Grid Grid.Row="2" Grid.Column="2">
                <Button x:Name="eight" Margin="10" Click="Click_Seat"
