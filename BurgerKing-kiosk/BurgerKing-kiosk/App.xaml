<Application x:Class="BurgerKing_kiosk.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BurgerKing_kiosk"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ControlTemplate TargetType="Button" x:Key="square">
            <Border Background="LightGray" CornerRadius="15" >
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
        </ControlTemplate>
        <Style TargetType="Button" x:Key="TablenButton">
            <Setter Property="Template" Value="{StaticResource square}"/>
        </Style>
    </Application.Resources>
</Application>
