<Window x:Class="BurgerKing_kiosk.Statistics"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BurgerKing_kiosk"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="Statistics" Height="1080" Width="1920">
    
    <Window.Resources>
        <Style x:Key="SaleBtnStyle" TargetType="Button">
            <Setter Property="Background" Value="#0B4C5F"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="140"/>
            <Setter Property="Height" Value="70"/>
            <Setter Property="Margin" Value="10 0 0 0"/>
            <Setter Property="FontSize" Value="25"/>
        </Style>

        <Style x:Key="SaleTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="Margin" Value="10 0 0 3 "/>
        </Style>
        
    </Window.Resources>

    <Grid>
        <Frame Name="frame_content"
                   NavigationUIVisibility="Hidden"/>
    </Grid>
   
</Window>
