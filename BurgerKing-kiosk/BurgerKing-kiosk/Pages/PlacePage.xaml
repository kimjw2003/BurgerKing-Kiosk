<Page x:Class="BurgerKing_kiosk.PlacePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BurgerKing_kiosk"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PlacePage">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <TextBlock Text="식사장소를 선택해 주세요." HorizontalAlignment="Center"
                       VerticalAlignment="Center" FontSize="20"></TextBlock>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Button Height="150" Width="150" HorizontalAlignment="Right" Margin="50"></Button>
            </Grid>
            <Grid Grid.Column="1">
                <Button Height="150" Width="150" HorizontalAlignment="Left" Margin="50"></Button>
            </Grid>
        </Grid>
        <Grid Grid.Row="2">

        </Grid>
    </Grid>
</Page>
